{
    // ui
    "window.titleBarStyle": "native",
    "window.zoomLevel": 0,
    "breadcrumbs.enabled": true,
    "workbench.startupEditor": "none",
    "workbench.statusBar.feedback.visible": false,
    "explorer.confirmDragAndDrop": false,
    // ms bullshit
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    // theming
    "workbench.colorTheme": "Gatito Theme",
    "workbench.iconTheme": "file-icons",
    // fonts
    "editor.fontFamily": "Operator Mono SSm Lig",
    "editor.fontSize": 11,
    "editor.fontWeight": "300",
    "editor.fontLigatures": true,
    "terminal.integrated.fontFamily": "Operator Mono SSm Lig",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.fontWeight": "300",
    // editor
    "editor.cursorBlinking": "expand",
    "editor.renderIndentGuides": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.lineNumbers": "relative",
    "editor.minimap.renderCharacters": false,
    "editor.tabCompletion": "onlySnippets",
    "editor.smoothScrolling": true,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.autoClosingBrackets": "always",
    "editor.rulers": [
        79, // Python
        99 // Rust
    ],
    // terminal
    "terminal.integrated.shell.windows": "powershell.exe",
    "terminal.integrated.shell.osx": "zsh",
    "terminal.integrated.shell.linux": "zsh",
    // git
    "git.confirmSync": false,
    "git.confirmEmptyCommits": false,
    "git.enableSmartCommit": true,
    // python
    "python.disableInstallationCheck": true,
    "python.terminal.activateEnvironment": true,
    "python.formatting.provider": "autopep8",
    "python.linting.enabled": false,
    // rust
    "rust.full_docs": true,
    "rust.jobs": 4,
    // vue.js
    "vetur.completion.autoImport": true,
    "vetur.completion.useScaffoldSnippets": true,
    "vetur.format.enable": true,
    "vetur.format.options.tabSize": 2,
    "vetur.format.options.useTabs": false,
    "vetur.format.defaultFormatter.js": "prettier-eslint",
    "vetur.format.defaultFormatter.html": "js-beautify-html",
    "vetur.format.defaultFormatter.css": "prettier",
    "vetur.format.defaultFormatter.scss": "prettier",
    // vim
    "vim.sneak": true,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 1000,
    "vim.overrideCopy": true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": "#222222",
    "vim.statusBarColors.insert": "#6c0259",
    "vim.statusBarColors.visual": "#d7dd38",
    "vim.statusBarColors.visualblock": "#d7dd38",
    "vim.statusBarColors.visualline": "#d7dd38",
    "vim.autoindent": true,
    "vim.showmodename": true,
    "vim.useSystemClipboard": true,
    "vim.incsearch": true,
    "workbench.colorCustomizations": {
        "statusBar.background": "#6c0259",
        "statusBar.noFolderBackground": "#6c0259",
        "statusBar.debuggingBackground": "#6c0259"
    },
    // YAML
    "yaml.format.enable": false,
    "yaml.completion": true,
    "yaml.format.singleQuote": true,
    "yaml.format.bracketSpacing": true,
    // eslint
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
        {
            "language": "vue",
            "autoFix": true
        },
        {
            "language": "html",
            "autoFix": true
        },
        {
            "language": "javascript",
            "autoFix": true
        }
    ],
    // emmet
    "emmet.triggerExpansionOnTab": true,
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",
    "emmet.includeLanguages": {
        "jinja": "html"
    },
    "explorer.confirmDelete": false,
}